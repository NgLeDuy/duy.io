<div class="container" >  
    <!-- DataTales Example -->
        
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Cây hệ thống</h6>
        </div>

    
    {{#if row.tree}} 
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="mytable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>user Quản Lý</th>
                            <th>Cấp quản lý</th>
                        </tr>
                    </thead>
                    <tbody>
                     
                   
                        {{#each row}}
                        <tr>
                            <td>{{ UserID }}</td>
                            <td>{{ HoTen }}</td>
                            <td>{{ Email }}</td>
                            <td>{{ Sdt }}</td>
                            <td>{{ userQL }}</td>
                            <td>{{ Categories }}</td>
                            
                        </tr>

                        {{/each}}
                    
                    </tbody>
                </table>
            </div>
        </div>
    {{/if}} 
    </div> 
   
      
   
</div>      