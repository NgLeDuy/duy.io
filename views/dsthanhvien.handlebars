                    <input placeholder="Ngày sinh" class="form-control ngaysinh1" type="text" onfocus="(this.type='date')"  onblur="(this.type='text')"  required='required'>
                  </div>
                  <div class="col-sm-8">
                    <input type="text" class="form-control noisinh1 " id="exampleLastName" placeholder="Nơi Sinh" name="noisinh" required=''>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-4 mb-3 mb-sm-0">
                    <input type="tel" class="form-control sdt1" id="exampleFirstName" placeholder="Số điện thoại" name="sdt" required=''>
                  </div>
                  <div class="col-sm-8">
                    <input type="email" class="form-control email1" id="exampleLastName" placeholder="Địa chỉ email" name="email" required=''>
                  </div>
                </div>
                <div class="form-group">
                  <input type="text" class="form-control diachi1" id="exampleInputEmail" placeholder="Địa chỉ liên hệ" name="diachi" required=''>
                </div>
                <div class="form-group row">
                  <div class="col-sm-4 mb-3 mb-sm-0">
                    <input type="number" class="form-control taikhoan1" id="exampleFirstName" placeholder="Tài khoản ngân hàng" name="taikhoan" required=''>
                  </div>
                  <div class="col-sm-8">
                    <input type="text" class="form-control chinhanh1" id="exampleLastName" placeholder="Thuộc chi nhánh" name="chinhanh" required=''>
                  </div>
                   
                </div>
                <input type="hidden" name="id" class="form-control userid1" required>
                <div class="form-group">
                  <input type="text" class="form-control ttnt1" id="exampleInputEmail" placeholder="Thông tin người thân" name="ttnt" required=''>
                </div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">OK</button>
      </div>
    </div>
  </div>
</div>
 
 </form>

