<div class="container" >  
    <!-- DataTales Example -->
        
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách thành viên</h6>
        </div>
        <div class="card-body">
           <a href="/admin/dangky" class="btn btn-primary btn-sm" style="margin-bottom: 1em;">Thêm thành viên</a>
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="mytable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Password</th>
                            <th>Địa chỉ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each results}}
                        <tr>
                            <td>{{UserID}}</td>
                            <td>{{ HoTen }}</td>
                            <td>{{ Email }}</td>
                            <td>{{ Sdt }}</td>
                            <td>{{ Password }}</td>
                            <td>{{ DiaChi }}<td>
                            <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-id="{{ UserID }}" data-hoten="{{ HoTen }}" data-email="{{ Email }}" data-userungvien="{{userNV}}" data-sdt="{{Sdt}}"
                                data-pass="{{Password}}" data-ngaysinh="{{NgaySinh}}" data-noisinh="{{NoiSinh}}" data-capql="{{Categories}}" data-diachi="{{DiaChi}}" data-userql="{{userQL}}" data-tknh="{{TKNH}}" data-chinhanh="{{ChinhanhTKNH}}" data-toggle="modal" data-target="#modalEdit"> Edit</a>
                            <a href="javascript:void(0);"   type="button" class="btn btn-sm btn-danger delete" data-toggle="modal" data-target="#myModal" data-id="{{ UserID }}">Xóa</a>
                            
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div> 
      
   
</div>      
<!-- The Modal Delete -->
