        $('.hoten1').val(hoten);
        $('.ngaysinh1').val(ngaysinh1);
        $('.noisinh1').val(noisinh);
        $('.sdt1').val(sdt);
        $('.email1').val(email);
        $('.diachi1').val(diachi);
        $('.chinhanh1').val(chinhanh);
        $('.taikhoan1').val(taikhoan);
 
        })
    });
 </script>
 